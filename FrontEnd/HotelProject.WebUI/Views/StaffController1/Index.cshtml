@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
     </tr>
    @foreach(var item in Model)
            {

        <tr>
            <th>@item.StaffID</th>
            <th>@item.Name</th>
            <th>@item.Title</th>
            <td><a href="/StaffController1/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/StaffController1/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-secondary">Detay</a></td>
         </tr>
            }



</table>
<a href="/StaffController1/AddStaff/" class="btn mb-1 btn-rounded btn-info">Yeni Personel Giriş</a>
