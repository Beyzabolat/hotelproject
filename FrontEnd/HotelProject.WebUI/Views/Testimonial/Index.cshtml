
@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Görseli</th>
        <th>Referans Adı</th>
        <th>Referans Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <th>@item.TestimonialID</th>
            <th>@item.Name</th>
            <th>@item.Title</th>
            <td><a href="/TestimonialController/DeleteTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/TestimonialController/UpdateTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
            
        </tr>
    }



</table>
<a href="/TestimonialController/AddTestimonial/" class="btn mb-1 btn-rounded btn-info">Yeni Personel Giriş</a>
